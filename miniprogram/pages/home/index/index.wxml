<view class='banner_content'>
  <swiper
    indicator-dots="{{indicatorDots}}" 
    autoplay="{{autoplay}}" 
    current = "{{current}}"
    class='swiper_now'
    bindchange = 'bindchange'
    > 
    <block wx:for="{{bannerList}}" wx:for-item='item' wx:key="index">
      <swiper-item>
        <image src='{{item.top_images}}' class='banner_img' mode="widthFix" bindtap='toActive' id='{{item.ID}}'></image>
      </swiper-item>
    </block>
  </swiper>

  <view class='step_tips'>
    <text class='big'>{{current+1}}</text> / <text>{{bannerList.length}}</text>
  </view>

</view>

