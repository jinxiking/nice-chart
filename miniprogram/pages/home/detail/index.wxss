/* miniprogram/pages/home/detail/index.wxss */
page{
  background-color:#F5F5F5 ;
}
.top_img{
  width: 100%;
}
.top_content{
  position: relative;
}
.logo{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  bottom:-80rpx;
  left:50%;
  margin-left: -80rpx;
}

.shop_name{
  margin-top: 100rpx;
  text-align: center;
}
.name{
  color:#333333;
  font-size:38rpx;
  font-weight:500;
}
.adress{
  margin-top: 12rpx;
  color:#666666;
  font-size:28rpx;
}

.card_content{
  padding:32rpx;
}

.card{
  padding: 24rpx;
  padding-bottom: 32rpx;
  background: #fff;
  border-radius:12rpx;
}
.card_title{
  font-size: 28rpx;
  color:#F48B53;
  line-height: 40rpx;
  border-bottom:1rpx dashed #E5E5E5;
  padding-bottom:14rpx;
}
.card_dro{
  margin-top:24rpx;
  display: flex;
  
}
.card_img{
  height: 160rpx;
  width: 160rpx;
}
.card_text{
  margin-left: 28rpx;
}
.card_text_name{
  color:#333333;
  font-size:30rpx;
}
.card_text_number{
  font-size: 26rpx;
  color:#333333;
  margin-top: 12rpx;
}
.tips{
  margin-top: 32rpx;
  font-size: 28rpx;
  color:#999999;
}
.button{
  background:linear-gradient(270deg,rgba(254,27,66,1) 0%,rgba(250,123,59,1) 100%);
  height: 90rpx;
  color:#fff;
  line-height: 90rpx;
  border-radius: 90rpx;
  text-align: center;
  font-size: 36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  margin-top: 32rpx;
}
.adr_icon{
  width: 20rpx;
  margin-right:8rpx;
  position: relative;
  top:3rpx;
}
