/* miniprogram/pages/home/detail/index.wxss */
page{
  background-color:#F5F5F5 ;
}
.mr20{
  margin-right: 20rpx;
}
.top_img{
  width: 100%;
  height: 400rpx;
}
.top_content{
  position: relative;
}
.logo{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  bottom:-80rpx;
  left:50%;
  margin-left: -80rpx;
}

.shop_name{
  margin-top: 100rpx;
  text-align: center;

}
.name{
  color:#333333;
  font-size:38rpx;
  font-weight:500;
}
.adress{
  margin-top: 12rpx;
  color:#666666;
  font-size:28rpx;
}

.card_content{
  padding:32rpx;
}

.card{
  /* padding: 24rpx; */
  padding-bottom: 32rpx;
  /* background: #fff; */
  border-radius:12rpx;
  height: 220rpx;
  position: relative;

}
.coupon_bg{
  position: absolute;
  width: 100%;
  z-index: 1;
}
.card_title{
  font-size: 28rpx;
  color:#F48B53;
  text-align: center;
  margin-top: 14rpx;
  padding:0 32rpx;
}
.card_dro{
  margin-top:24rpx;
  display: flex;
  position: absolute;
  top:0;
  left:0;
  z-index: 10;
}
.card_img{
  height: 160rpx;
  width: 160rpx;
}
.card_text{
  margin-left: 28rpx;
}
.card_text_name{
  color:#333333;
  font-size:30rpx;
}
.card_text_number{
  font-size: 26rpx;
  color:#E0361C;
  margin-top: 22rpx;

}
.number_line{
  width: 240rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #F5F5F5;
}
.tips{
  margin-top: 32rpx;
  font-size: 28rpx;
  color:#999999;
}
.button{
  background:linear-gradient(270deg,rgba(254,27,66,1) 0%,rgba(250,123,59,1) 100%);
  height: 90rpx;
  color:#fff;
  line-height: 90rpx;
  border-radius: 90rpx;
  text-align: center;
  font-size: 36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  margin-top: 32rpx;
}
.adr_icon{
  width: 20rpx;
  margin-right:8rpx;
  position: relative;
  top:3rpx;
}
.card_tips{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  position: absolute;
  bottom:18rpx;
  left: 32rpx;
  z-index: 10;
}
