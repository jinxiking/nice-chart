/* miniprogram/pages/my/question/index.wxss */
.tips{
  padding: 24rpx 32rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.type_content{
  padding: 0rpx 32rpx;
  background: #fff;
  
}

.type_item{
  height: 100rpx;
  color:#333;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.border{
  border-bottom:1rpx solid #F5F5F5;
}

.content{
  margin-top:26rpx;
  background: #fff;
  padding: 24rpx 36rpx;
}
.content_title{
  color:#222222;
}
.textarea{
  margin-top: 32rpx;
  height:260rpx;
  /* width: 100%; */
  background:rgba(245,245,245,1);
  border-radius:6px;
  padding: 24rpx;
  position: relative;
}
.placeholder{
  font-size: 30rpx;
  color:#999999;
}
.text_in{
  width: 100%;
}

.text_number{
  position: absolute;
  font-size:30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  right: 24rpx;
  bottom:24rpx;
}

.mt20{
  margin: 32rpx 0;
}

.content_tips{
  color:#999999;
  font-size: 25rpx;
}

.upload_content{
  display: flex;
  justify-content: space-between;
}

.upload_item{
  width:220rpx;
  height: 220rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.icon_img{
  width: 52rpx;
  height: 52rpx;
}
.img_cont{
  text-align: center;
}
.text_cont{
  text-align: center;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(155,155,155,1);
}

.contect{
  margin-top:24rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  font-size: 30rpx;
}
.tel{
  font-size: 30rpx;
  text-align: right;
}

.submit_cont{
  margin-top:24rpx;
  padding: 28rpx 32rpx;
  padding-top:0;
}
.button{
  background:linear-gradient(270deg,rgba(254,27,66,1) 0%,rgba(250,123,59,1) 100%);
  height: 90rpx;
  color:#fff;
  line-height: 90rpx;
  border-radius: 90rpx;
  text-align: center;
  font-size: 36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
}
.icon_yes{
  width: 32rpx;
}