/* miniprogram/pages/my/index/index.wxss */

.my_top{
  width: 100%;
  height: 468rpx;
  background:linear-gradient(180deg,rgba(254,27,66,1) 0%,rgba(250,123,59,1) 100%);
  border-radius:0px 0px 60rpx 60rpx;
  position: relative;
  padding-top: 60rpx;
  z-index: 5;
}

.scan{
  width: 214rpx;
  height: 84rpx;
  background:rgba(255,255,255,1);
  border-radius:0px 100px 100px 0px;
  opacity:0.25;
  position: absolute;
  top:24rpx;
  z-index: 1;
}

.scan_img{
  width: 38rpx;
  height: 38rpx;
  z-index: 9;
  margin-left: 34rpx;
}
.sacn_text{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 22rpx;
}
.scan_action{
  height: 84rpx;
  position: absolute;
  top:24rpx;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user{
  display: flex;
  justify-content: center;
}
.user_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border:2rpx solid rgb(247,152,159);
}

.user_name{
  text-align: center;
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin-top: 30rpx;
}

.user_number{
  margin-top: 20rpx;
  font-size:38rpx;
  font-family:Futura-Medium,Futura;
  font-weight:500;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.number_cont{
  margin-left: 60rpx;
  margin-right: 60rpx;
  text-align: center;
  position: relative;
}

.line{
  position: absolute;
  width:1px;
  height:16px;
  background:rgba(247,247,247,1);
  opacity:0.6;
  right: -60rpx;
  bottom:0;
}

.number_dro{
  font-size: 28rpx;
  margin-top: 10rpx;
}

.my_cont{
  padding-right: 32rpx;
  padding-left: 32rpx;
  position: relative;
  top:-120rpx;
  z-index: 10;
}

.card{
  background: #fff;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 8rpx 0px rgba(0,0,0,0.04);
  border-radius:16px;
  
  z-index: 10;
}
.toBusinessLast{
  border:none!important;
}
.card_item{
  height: 120rpx;
  display: flex;
  margin-left:34rpx;
  margin-right:34rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom:1rpx solid #f5f5f5;
}
.icon_img_1{
  width: 30rpx;
  height: 40rpx;
}

.card_right{
  position: relative;
  top:-2rpx;
}

.card_name{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-left: 40rpx;
  position: relative;
  top:-2rpx
}

.right{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top:2rpx;
}


