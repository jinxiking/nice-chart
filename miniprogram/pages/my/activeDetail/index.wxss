/* miniprogram/pages/my/activeDetail/index.wxss */
.content{
  padding:24rpx 32rpx;
}
.top{
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(0,0,0,0.04);
  border-radius: 12rpx;
  overflow: hidden;
}

.active_name{
  font-size:34rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  background:linear-gradient(270deg,rgba(254,27,66,1) 0%,rgba(250,123,59,1) 100%);
  height: 160rpx;
  line-height: 160rpx;
  padding-left: 32rpx;
}

.active_detail{
  display: flex;
  justify-content: space-around;
  margin-top:28rpx;
  margin-bottom: 28rpx;
}
.active_num{
  font-size:38rpx;
  font-family:Futura-Medium,Futura;
  font-weight:500;
  color:rgba(51,51,51,1);
  text-align: center;
}


.active_dro{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  text-align: center;
  margin-top: 14rpx;
}
.active_list{
  padding:24rpx 32rpx;
  background: #fff;
  margin-top: 24rpx;
  position: relative;
}

.time{
  border: 1rpx solid #E5E5E5;
  font-size:28rpx;
  color:rgba(153,153,153,1);
  padding: 12rpx 20rpx;
  border-radius: 32rpx;
  padding-bottom: 14rpx;
  width: 170rpx;
  text-align: center;
}

.time_picker{
  display: flex;
}
.to{
  line-height: 60rpx;
  margin-right: 6rpx;
  margin-left: 6rpx;
}

.shopPiker{
  width:150rpx;
  height:64rpx;
  background:linear-gradient(270deg,rgba(254,27,66,1) 0%,rgba(250,123,59,1) 100%);
  border-radius:32rpx;
  line-height:64rpx;
  text-align: center;
  color:#fff;
  font-size:28rpx;
  margin-left: 10rpx;
  position: absolute;
  right: 32rpx;
  top:24rpx;
}

.shopPikerShow{
  display: flex;
  justify-content: center;
  align-items: center;
}

.triangle-down {
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #fff;
  margin-left: 5rpx;
}

.table_item{
  color:#999999;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
  color:#333333;
}
.table_item text{
  width: 25%;
  text-align: center;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(85,85,85,1);
}
.detail_content{
  background: #fff;
  min-height:700rpx;
}
.line_1{
  width: 35%!important;
}

